extends layout

block content
  .container
    .row
      .col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Register in the passport test app
          .account-wall
            img.profile-img(src='http://placehold.it/350x3gitgit50')
            form.form-signin(action='/login', method='POST')
              input.form-control(type='text', name='username', placeholder='Email',required, autofocus)
              input.form-control(type='password', name='password', placeholder='Password', required)
              button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
              span.clearfix
          a.text-center.new-account(href='/register') Create new account
          #message
            if message.length > 0
              h1.text-center.error-message ala bala #{message}